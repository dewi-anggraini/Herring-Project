<div class="card edit-comment my-5">
  <div class="card-body-comment">
    <h1 class="edit-comment-title text-center">Edit Comment</h1>

  <%= form_with(model: @comment, url: comment_path(@comment), method: :patch, local: true) do |form| %>
    <div>
      <%= form.label :comment, class:"form-label" %>
      <%= form.text_area :body, class:"form-control" %>
    </div>
    <div class="text-center">
      <%= form.submit 'Update Comment', class: "btn btn-secondary" %>
      <%= link_to 'Cancel', post_path(@post), class: 'btn btn-secondary' %>
    </div>
  <% end %>  
    
  <%= link_to 'Back to Post', @post, class:"btn btn-primary" %>

  </div>
</div>
