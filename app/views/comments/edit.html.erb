<h1>Edit Comment</h1>

<%= form_with(model: @comment, url: comment_path(@comment), method: :patch, local: true) do |form| %>
    <div>
      <%= form.label :comment %>
      <%= form.text_area :body %>
    </div>
    <div>
      <%= form.submit 'Update Comment' %>
      <%= link_to 'Cancel', post_path(@post), class: 'btn btn-secondary' %>
    </div>
  <% end %>  

<%= link_to 'Back to Post', @post %>
