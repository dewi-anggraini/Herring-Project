<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<%= render @comments %>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", comment %>
    </p>
  <% end %>
</div>
<%= link_to 'New Comment', new_comment_path(@post) %>


