<div class="card edit-post-card my-5">
  <div class="card-body-edit">
    <h1 class="edit-post-title text-center">Edit Post</h1>

    <%= form_with(model: @post, local: true) do |form| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this content from being saved:</h2>
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
    
      <div class="mb-3">
        <%= form.label :body, class: "form-label" %>
        <%= form.text_area :body, class: "form-control" %>
      </div>
    
      <div class="text-center">
        <%= form.submit 'Update Post' %>
      </div>
    <% end %>
    
    <%= link_to 'Back to Posts', posts_path, class: 'btn btn-primary' %>

  </div>
</div>

