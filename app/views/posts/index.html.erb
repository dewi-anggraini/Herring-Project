<p style="color: green"><%= notice %></p>

<h1>All Posts</h1>

<% @posts.each do |post| %>
  <div>
    <h2><%= post.title %></h2>
    <p>Posted by: <%= post.user.email %></p>
    <p>Date: <%= post.created_at.strftime("%B %d, %Y") %></p>
    <%= link_to 'Show Post', post_path(post) %>
  </div>
<% end %>

<%= link_to 'New Post', new_post_path %>
<%= link_to 'Back to Home', root_path %>



