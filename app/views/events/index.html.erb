<h1>Crop Calendar for <%= Time.current.year %></h1>

  <% if @crops %>
    <% @crops.each do |crop| %>
      <h2><%= crop.name %></h2>
      <div class="crop-diagram">
        <div class="month-line">
          <% (1..12).each do |month| %>
            <span class="month"><%= Date::MONTHNAMES[month] %></span>
          <% end %>
        </div>
        <div class="activity-line">
          <% (1..12).each do |month| %>
            <span class="activity">
              <% if crop.planting_months.include?(month.to_s) %>
                <span class="planting">Plant</span>
              <% elsif crop.harvest_months.include?(month.to_s) %>
                <span class="harvest">Harvest</span>
              <% elsif crop.mid_season_months.include?(month.to_s) %>
                <span class="mid-season">Mid</span>
              <% else %>
                <span class="no-activity">-</span>
              <% end %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No crops found.</p>
  <% end %>
  
  <!-- Optionally add links back to the homepage -->
  <a href="/">Back to Home</a>