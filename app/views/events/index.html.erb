<h1>Crop Calendar for <%= Time.current.year %></h1>

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover table-sm">
  <thead>
    <tr>
      <th>crop</th>
      <% Date::MONTHNAMES.drop(1).each do |month| %>
        <th><%= month %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @crops.each do |crop| %>
      <tr>
        <td><%= crop.name %></td>
        <% (1..12).each do |month| %>
          <td>
          
            <% if crop.planting_months.include?(month.to_s) %>
             <span class="planting">Plant</span>
            <% elsif crop.harvest_months.include?(month.to_s) %>
             <span class="harvest">Harvest</span>
            <% elsif crop.mid_season_months.include?(month.to_s) %>
             <span class="mid-season">Mid</span>
            <% end %>
            
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
  
  <div class="container">
    <div class="d-flex justify-content-center">
      <%= image_tag "bmkg.png", class: "img-fluid w-75", alt: "Average Rainfall by BMKG" %>
    </div>
  </div>
  <a href="/">Back to Home</a>